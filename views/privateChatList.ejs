            <!--<button class="btn btn-info btn-block" type="submit" ng-click="searchPrivateChat()">Search</button>-->
        <!--</div>-->
        <div class="container">
            <center>
                <input style="border: 1px solid #ccc; height:30px; width:85%" ng-model="privatechat_search_area" size="30" id="privatechat_search_area" type="text" placeholder="Search Private Chat Contents">
                <button type="button" ng-click="searchPrivateChat()" class="btn btn-circle"><i class="glyphicon glyphicon-search"></i></button>
            </center>
        </div>

        <div class="container" ng-show="showList.privateChatSearchResult">
            <div class="panel panel-default " ng-repeat="privatechat in privatechat_search_results track by $index">
                <div class="panel-heading"><span>{{privatechat.sender}} @ </span><span>(Status: {{privatechat.emergency_status}}){{privatechat.timestamp |  date: 'MM.dd.yyyy HH:mma' }}</span> <span>Receiver:{{privatechat.receiver}}</span></div>
                <div class="panel-body"><span class="content">{{privatechat.message}}</span><span class="avatar"></span></div>
            </div>

            <div ng-if="searchPrivateChatMore">
                <center>
                    <button type="button" class="btn btn-info btn-circle btn-lg"><i class="glyphicon glyphicon-chevron-down" ng-click="GetMoreSearchResults()"></i></button>
                </center>
            </div>
        </div>



