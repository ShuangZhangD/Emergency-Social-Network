        <div class="container" ng-show="showList.privateChatTable">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Senders
                    </th>
                    <th>
                        New Messages
                    </th>
                    <th>
                        Chat Page
                    </th> 
                </tr>
            </thead>
            <tr ng-repeat="sender in privateSenderList track by $index">
                <td>
                    {{sender.sender}}
                </td>
                <td>
                    <span style="color:red">{{sender.count}}</span>
                <td>
                <button type="button" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-send" ng-click="openMsg(sender.sender, false)"></i></button>
                </td>
            </tr>
        </table>
        </div>
    </div>
</div>
