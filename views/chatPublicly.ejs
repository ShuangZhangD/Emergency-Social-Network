<div class="container" ng-controller="chatPubliclyCtrl" ng-show="showList.chatPublicly">
    <h3> Public Chat </h3>
    <!--<div class="container">-->
        <!--<input ng-model="pubsearchmsg" id="pubsearchmsg" type="text" class="form-control" placeholder="Search Public Msg">-->
        <!--<button class="btn btn-info btn-block" type="submit" ng-click="searchPublicMsg()">Search</button>-->
    <!--</div>-->
    <div class="container">
        <center>
            <input style="border: 1px solid #ccc; height:30px; width:90%" ng-model="pubsearchmsg" size="30" id="pubsearchmsg" type="text" placeholder="Search Public Msg">
            <button type="button" ng-click="searchPublicMsg()" class="btn btn-circle"><i class="glyphicon glyphicon-search"></i></button>
        </center>
    </div>
    <br>

    <div class="container" ng-show="showList.publicSearchResult">
        <div class="panel panel-default " ng-repeat="msg in PublicSearchResult track by $index">
            <div class="panel-heading"><span>{{msg.username}} @ </span><span>(Status: {{msg.emergencystatus}}){{msg.timestamp |  date: 'MM.dd.yyyy HH:mma' }}</span></div>
            <div class="panel-body"><span class="content">{{msg.pubmsg}}</span><span class="avatar"></span></div>
        </div>

        <div ng-if="SearchPublicMsgMore">
            <center>
                <button type="button" class="btn btn-info btn-circle btn-lg"><i class="glyphicon glyphicon-chevron-down" ng-click="GetMorePublicSearchResults()"></i></button>
            </center>
        </div>
    </div>

    <br>

    <div class="container" ng-show="showList.publicHistory">

        <div class="panel panel-default " ng-repeat="msg in displaymsg track by $index">

            <div class="panel-heading"><span>{{msg.username}} @ </span><span>(Status: {{msg.emergencystatus}}){{msg.timestamp |  date: 'MM.dd.yyyy HH:mma' }}</span></div>
            <div class="panel-body"><span class="content">{{msg.pubmsg}}</span><span class="avatar"></span></div>
        </div>


    </div>
    <div class="container">
        <center>
            <input style="border: 1px solid #ccc; height:45px; width:84%" ng-model="pubmsg" size="30" id="pubmsg" type="text" placeholder="Send Public Msg" required autofocus>
            <button type="button" ng-click="postMsg()" class="btn btn-info btn-circle btn-lg"><i class="glyphicon glyphicon-send"></i></button>
        </center>
    </div>
